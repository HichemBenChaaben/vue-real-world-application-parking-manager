{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "types.d.ts",
    "vue.shims.d.ts",
    "client/src/**/*",
    "client/src/**/*.ts",
    "client/src/**/*.d.ts",
    "client/src/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "vite.config.ts",
    "node_modules",
    "dist",
    "client/src/preview"
  ],
  "compilerOptions": {
    "composite": true,
    "strict": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./client/src/*"]
    }
  }
}
